generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Location {
  id    Int @id @default(autoincrement())
  name  String @unique @db.VarChar(30)

  tasks Task[] // has many tasks
}

model Task {
  id           Int @id @default(autoincrement())
  description  String @unique @db.VarChar(100)

  location     Location @relation(fields: [location_id], references: [id], onDelete: Cascade) // belongs to location
  location_id  Int

  logged_times LoggedTime[] // has many logged_times
}

model Worker {
  id           Int @id @default(autoincrement())
  username     String @db.VarChar(30)
  hourly_wage  @db.Decimal(5, 2)

  logged_times LoggedTime[] // has many logged_times
}

model LoggedTime {
  id           Int @id @default(autoincrement())
  time_seconds Int

  task    Task @relation(fields: [task_id], references: [id], onDelete: Cascade) // belongs to task
  task_id Int

  worker    Worker @relation(fields: [worker_id], references: [id], onDelete: Cascade) // belongs to worker
  worker_id Int
}
